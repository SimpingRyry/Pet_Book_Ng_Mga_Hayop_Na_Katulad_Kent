<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#7e9684">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Upper CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/upperCardView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#7e9684">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/top_bar_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:riv_oval="true"
                    android:layout_alignParentStart="true"
                    />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/top_bar_juris"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/background_icon"
                    app:riv_oval="true"
                    android:layout_alignParentEnd="true"
                    />

                <!-- Search Bar inside CardView -->


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <!-- Lower CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/lowerCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="#f0ac61"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- TextView outside ScrollView -->


                <!-- ScrollView with LinearLayout inside -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- First TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Name:"
                            android:textSize="18sp" />

                        <!-- Second TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:id="@+id/name"
                            android:text="TextView"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Line underneath the second TextView -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@android:color/black" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="18dp"
                            android:text="Email:"
                            android:textSize="18sp" />

                        <!-- Second TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="TextView"
                            android:id="@+id/email"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Line underneath the second TextView -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="18dp"
                            android:text="Address:"
                            android:textSize="18sp" />

                        <!-- Second TextView -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="TextView"
                            android:textSize="18sp"
                            android:id="@+id/address"
                            android:textStyle="bold" />

                        <!-- Line underneath the second TextView -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@android:color/black" />
                        <!-- Other views can be added here -->

                    </LinearLayout>



                </ScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Pets for Adoption"
                    android:padding="15dp"
                    android:fontFamily="monospace"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/adoptionRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"/>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>